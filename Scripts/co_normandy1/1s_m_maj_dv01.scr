////-------------prepinani lightmap od dveri m_maj_dv01------------------------
//---------------define variable----------------------------------------------------------

Block {
frame m_maj_dv01;		FRM_GetMyFrame(m_maj_dv01);
integer door=0;
}

//----------------main script---------------------------------------------------------------

OnUse()
	{
	Delay(500);
	If(door==1) 
	{door=0}
	Else{ door=1 }
	FRM_SetLightMap(m_maj_dv01,door);
	}