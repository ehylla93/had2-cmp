// -------------------------------------------------------------------------------------------------------------

OnDeath(){
  EndScript();
}

OnAlarm(){
EndScript();
}

OnAlarmDone(){
  FRM_MorphSpeechDelayed(me, 90003024, 5, 30); // got him
  HUMAN_SetAlarm(false);
  goto END;
}

OnSignal(1)
{
HUMAN_BoardVehicle("Opel_05",  false, 1);
HUMAN_SETSIGHTRANGE(100);
HUMAN_SETAIMODE_Aggressive();
HUMAN_SetOptimized(1);
HUMAN_TurnAtNearestPlayer();
goto END;
}

OnSignal(2)
{
HUMAN_BoardVehicle("Opel_05",  false, 1);
HUMAN_SETSIGHTRANGE(100);
HUMAN_SETMODE_Run();
HUMAN_SETAIMODE_Aggressive();
HUMAN_Move("C5_G34_01");
goto END;
}

OnSignal(3)
{
HUMAN_BoardVehicle("Opel_05",  false, 1);
HUMAN_SETSIGHTRANGE(100);
HUMAN_SetOptimized(1);
HUMAN_SETAIMODE_Aggressive();
HUMAN_TurnAtNearestPlayer();
goto END; 
}

