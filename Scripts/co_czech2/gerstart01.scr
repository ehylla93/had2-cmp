}

Whenever funguj2(_SignalReceived(3))	//received from ger5
{
HUMAN_SetAnim("", 400, 400,0);
HUMAN_TurnAt(ger5);
goto end;
}

Whenever funguj3(_SignalReceived(4))	//received from ger5
{
HUMAN_WeaponOnArm(1);
HUMAN_Move("ger_08");
HUMAN_Move("ger_13");
