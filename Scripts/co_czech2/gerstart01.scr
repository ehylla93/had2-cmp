// gerstart01 - soldier near spawn, at the end (Ger_)
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Integer aievent;	aievent=0;
integer x;	x=0;

Frame ger4;	FRM_FindFrame(ger4, "Ger_4");
Frame ger5;	FRM_FindFrame(ger5, "Ger_5");
Frame ger6;	FRM_FindFrame(ger6, "Ger_6");
Frame ger7;	FRM_FindFrame(ger7, "Ger_7");
Frame sed;	FRM_FindFrame(sed, "Gersed");
Frame cum;	FRM_FindFrame(cum, "Gercum");
Frame cum1;	FRM_FindFrame(cum1, "Gercum1");

Frame me;	FRM_GetMyFrame(me);
Frame cum2;	FRM_FindFrame (cum2,"la_lokoroz_");

HUMAN_SETAIMODE_Defensive();

HUMAN_WeaponOnArm(0);

SetAlarmType(140,false);
}

goto end;

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

OnAlarm()
{
	Block
	{
	DisableSignals(1);
	aievent=_GetAlarmType();
	SetWhenever(alarm, false);
	SendSignal(ger4, 1);	//Alarm
	SendSignal(ger5, 1);	//Alarm
	SendSignal(ger6, 3);	//Spawn
	}
	HUMAN_SETMODE_StandFast();
	HUMAN_SetAnim("", 40, 40,0);
If(((aievent==2) OR (aievent==16)) OR (aievent==256))
{
	HUMAN_Stop();	
	HUMAN_WeaponOnArm(1);
	HUMAN_TurnAtNearestPlayer();
}
	EndScript();
}

OnAlarmDone()
{
	Block
	{
	DisableSignals(0);
	HUMAN_WeaponOnArm(1);
	HUMAN_SetAlarm(false);
	SetAlarmType(1023, false);
	SetAlarmType(499, true);
	HUMAN_SETMODE_Walk();
	}
	HUMAN_SETMODE_Stand();
	Delay(2000);
	GoTo move;
}

OnDeath()
{
	SendSignal(ger7, 1);
	DisableSignals(1);
	EndScript();
}

Whenever alarm(_SignalReceived(1))	// received from ger4, ger5
{
	HUMAN_SetAnim("", 50, 50, false);
	HUMAN_SETMODE_StandFast();
	HUMAN_WeaponOnArm(1);
	x=1;
	HUMAN_SETMODE_Crouch();
	HUMAN_TurnAt(cum2);
	GoTo end;
}

Whenever start(_SignalReceived(5))	
{
HUMAN_SETMODE_Walk();
HUMAN_Move("Ger_03");
HUMAN_SETMODE_Crouch();
HUMAN_TurnAt(ger5);
goto end;
}

Whenever funguj(_SignalReceived(2))		//received from ger5
{
HUMAN_SETMODE_Stand();
HUMAN_Move("ger_03");
HUMAN_TurnAt(ger5);
delay (8000);
HUMAN_Move("ger_7_01");
HUMAN_SetAnim("%%cumvoda", 400, 400,0);
delay(5000);
HUMAN_SetAnim("", 400, 400,0);
HUMAN_Move("Ger_04");
HUMAN_SETMODE_Crouch();
HUMAN_LookAround(1);
delay(4000);
HUMAN_SETMODE_Stand();
HUMAN_Move("Ger_05");
HUMAN_SETMODE_Crouch();
HUMAN_LookAround(1);
delay(4000);
HUMAN_SETMODE_Stand();
label 1:
