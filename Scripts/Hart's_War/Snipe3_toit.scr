GoTo end;

//=======================================================================================

Whenever go(_SignalReceived(1))
{   
	SetWhenever (PNIR, true);
	SetWhenever (PNIR, true);
	SetAlarmType(1023,1);
	Delay(500);
	SetWhenever(go,0);
}
goto end;
//=======================================================================================

Whenever PIR (_PlayerInRange(100))
	{
	SetWhenever (PIR, false);
	SetWhenever (PNIR, true);
	HUMAN_Suspend(false);
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
	goto chodim;
	}

//=======================================================================================	
	
	
Whenever PNIR (!_PlayerInRange(100))
	{
	SetWhenever (PNIR, false);
	SetWhenever (PIR, true);
	HUMAN_Suspend(true);		
	}

//=======================================================================================


OnAlarm()
	{	
HUMAN_SETSIGHTRANGE(180);
HUMAN_SETHEARRANGE(100);
HUMAN_SetSniper(1, 5);	
HUMAN_TurnAtNearestPlayer();
HUMAN_SETAIMODE_Aggressive();	
HUMAN_SETMODE_Crouch();
HUMAN_SetOptimized(1);
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
EndScript();
	}

//=======================================================================================

	
OnAlarmDone()
	{
	HUMAN_SETSIGHTRANGE(180);
    HUMAN_SETHEARRANGE(100);
	HUMAN_SETMODE_Lie();
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
	goto chodim;
	}

//=======================================================================================

label chodim:
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
HUMAN_SETSIGHTRANGE(180);
HUMAN_SETHEARRANGE(100);
HUMAN_TurnAtNearestPlayer();
HUMAN_SETMODE_Lie();
goto chodim;


goto end;
Label END: