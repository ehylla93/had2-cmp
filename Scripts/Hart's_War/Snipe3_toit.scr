 Block
{
SetAlarmType(1,1);
SetAlarmType(2,1);
SetAlarmType(4,1);
SetAlarmType(8,1);
SetAlarmType(16,1);
SetAlarmType(32,1);
SetAlarmType(64,1);
SetAlarmType(128,1);
SetAlarmType(256,1);
SetAlarmType(512,1);
SetAlarmType(1023,1);
    FRAME this;			FRM_GetMyFrame(this);
    FRM_SwitchFaceTexture(this, "e_f080");
//    SetWhenever (PIR, true);
//    SetWhenever (PNIR, true);
       SetWhenever (PIR, false);
       SetWhenever (PNIR, false);
//	HUMAN_SETMODE_Stand();
//  HUMAN_SETMODE_Walk();
    HUMAN_Suspend(1);
	HUMAN_SETMODE_Lie();
	HUMAN_SETAIMODE_Aggressive();
//	HUMAN_SETAIMODE_Defensive();
