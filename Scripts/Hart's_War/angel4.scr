OnAlarmDone(){
  block{
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    HUMAN_WeaponOnArm(0);
    SetAlarmType(1023, true);		// all alarm events are on
    SetAlarmType(512, true);		// 512, 256
    HUMAN_SETSIGHTRANGE(180);
    HUMAN_SETHEARRANGE(100);
    HUMAN_SetOptimized(true);
  }
  goto chodim1;
}

