OnAlarm(){

  block{
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
    HUMAN_WeaponOnArm(1);
    HUMAN_Stop();
    SetWhenever(go, false);
    HUMAN_SETMODE_Run();
HUMAN_SETSIGHTRANGE(180);
HUMAN_SETHEARRANGE(100);
    HUMAN_SetOptimized(true);
    Atype = _GetAlarmType();
    printfnumber("26: ", Atype);
  }
    
   HUMAN_TurnAtNearestPlayer();
  
  if(Atype != 32){
    HUMAN_SetAlarm(1);
    SetAlarmType(768, 1);
    SetAlarmType(1023,1);
    HUMAN_WeaponOnArm(1);
    SetAlarmType(99, true);
    HUMAN_MoveToAlarm();
	HUMAN_SETMODE_Crouch();
  }

  EndScript();
}

