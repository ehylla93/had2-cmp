// ---------------------------------------------

Block
{
Frame N1;	FRM_FindFrame(N1, "Bomba_01");
Frame N2;	FRM_FindFrame(N2, "Bomba_02");
Frame N3;	FRM_FindFrame(N3, "Bomba_03");
Frame N4;	FRM_FindFrame(N4, "Bomba_04");
Frame N5;	FRM_FindFrame(N5, "Bomba_05");
