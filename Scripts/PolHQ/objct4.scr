Whenever Planted ( (((((((_ACTOR_GetState(N1)==1) and (_ACTOR_GetState(N2)==1)) and (_ACTOR_GetState(N3)==1)) and (_ACTOR_GetState(N4)==1)) and (_ACTOR_GetState(N5)==1)) and (_ACTOR_GetState(N6)==1)) and (_ACTOR_GetState(N7)==1)) and (_ACTOR_GetState(N8)==1))
{	
SendSignal(DZ, 1);
SendSignal(obj6, 1);
Delay(500);
SUBTITLES_SetOn(1);
