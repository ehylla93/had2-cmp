frame sound1;		frm_findframe(sound1,"S_drol1");
frame sound2;		frm_findframe(sound2,"S_drol3");

integer rnd;	
integer rnd_pause;

label loop:
rnd= _randomint(2) +1;
rnd_pause= _randomint(9000) +7900;
if (rnd==1) {FRM_SetOn(sound1,true);}
if (rnd==2) {FRM_SetOn(sound2,true);} 
delay(rnd_pause);
goto loop; 
