//EP03
//----------------------Block----------------------
Block
{
frame gd23;			FRM_FindFrame(gd23,"gdummy23");
frame gd26;			FRM_FindFrame(gd26,"gdummy26");
frame gd27;			FRM_FindFrame(gd27,"gdummy27");
frame gd37;			FRM_FindFrame(gd37,"gdummy37");
Frame me;			FRM_GetMyFrame(me);
Frame Player;
SetAlarmType(1,1);
SetAlarmType(2,1);
SetAlarmType(4,0);
SetAlarmType(8,0);
SetAlarmType(16,0);
SetAlarmType(32,1);
SetAlarmType(64,1);
SetAlarmType(128,0);
SetAlarmType(256,1);
SetAlarmType(512,0);
integer AIEvent;
integer rnd1;
integer rndcp;
integer rndpause;
HUMAN_SetOptimized(1);
HUMAN_Suspend(1);
SetWhenever(InRange, 0);
SetWhenever(NotInRange, 0);
}
goto END;
//----------------------Spawn/Activity----------------------
Whenever Spawn (_SignalReceived(1))
{
Block
{
rnd1=(_randomint(4)+1);
  if (rnd1==1)
  {
printf ("EP17 not spawn");
DisableWhenevers(1);
DisableSignals(1);
DisableAlarms(1);
goto END;
  }
  else
  {
HUMAN_Suspend(0);
rnd1=(_randomint(8)+1);
  if (rnd1==1){HUMAN_CreateItemInStore(61, 1);}
printf ("EP17 spawn");
  }
HUMAN_SETSIGHTRANGE(70);
HUMAN_SETHEARRANGE(55);
HUMAN_WeaponOnArm(0);
HUMAN_WeaponUp(1);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Guard();
goto checkpoint1;
}
label checkpoint1:
HUMAN_MoveToFrame(gd23, 10);
gosub anim;
gosub delay;
rndcp=(_randomint(2)+1);
  if (rndcp==1){goto checkpoint2;}
  if (rndcp==2){goto checkpoint3;}
label checkpoint2:
HUMAN_MoveToFrame(gd26, 7);
gosub anim;
gosub delay;
goto checkpoint1;
//
label checkpoint3:
HUMAN_MoveToFrame(gd37, 5);
HUMAN_MoveToFrame(gd27, 8);
gosub anim;
gosub delay;
HUMAN_MoveToFrame(gd37, 5);
goto checkpoint1;
//----------------------Anim
label anim:
rnd1=(_randomint(4)+1);
  if (rnd1==1)
  {
HUMAN_MoveRandomRadius(2);
HUMAN_SetAnim("%%nuda", 1000, 1000, 1);
  }
  if (rnd1==2)
  {
HUMAN_MoveRandomRadius(2);
HUMAN_SetAnim("%%kopkamen1", 1000, 1000, 1);
  }
  if (rnd1==3)
  {
HUMAN_SetAnim("%%nuda1", 1000, 1000, 1);
  }
  if (rnd1==4)
  {
HUMAN_ACTIVITY_Hot();
HUMAN_SetAnim("%%nuda", 1000, 1000, 1);
  }
return;
//----------------------Delay
label delay:
rndpause=(_randomint(8000)+4000);
delay(rndpause);
HUMAN_SetAnim("", 1000, 1000, 1);
delay(1000);
return;
}
//----------------------Detect Player (After Alarm)----------------------
Whenever InRange (_PlayerInRange(40))
{
SetWhenever(NotInRange, 1);
rnd1=(_randomint(5)+1);
  if (rnd1==1)
  {
goto follow;
  }
  else
  {
goto alrmdone;
  }
goto END;
}
Whenever NotInRange (!_PlayerInRange(40))
{
printf ("Player not in range 40");
SetWhenever(InRange, 1);
goto alrmdone;
}
//----------------------Follow Player----------------------
label follow:
HUMAN_SETMODE_Crouch();
HUMAN_TurnAtNearestPlayer();
delay(5000);
FRM_GetNearestPlayer(me, Player);
HUMAN_MoveToFrame(Player, 10);
delay(5000);
HUMAN_MoveToFrame(Player, 6);
rnd1=(_randomint(3)+1);
  if ((rnd1==1) or (rnd1==2))
  {
goto follow;
  }
  else
  {
goto alrmdone;
  }
//----------------------OnAlarm----------------------
OnAlarm()
{
HUMAN_SetAnim("", 1000, 1000, 1);
HUMAN_Stop();
HUMAN_WeaponOnArm(1);
Block
{
AIEvent = _GetAlarmType();
PrintfNumber("EP17 alarm type: ",AIEvent);
If (AIEvent == 32)
{
HUMAN_SETMODE_Lie();
HUMAN_SETAIMODE_Defensive();
}
If ((AIEvent == 2) or (AIEvent == 256))
{
HUMAN_SETMODE_Crouch();
HUMAN_SETMODE_Silence();
HUMAN_SETAIMODE_Defensive();
}
else
{
HUMAN_SETMODE_Walk();
}
}
EndScript();
}
//----------------------OnAlarmDone----------------------
OnAlarmDone()
{
printf ("EP17 Alarm done");
HUMAN_SetAlarm(0);
HUMAN_Reload();
HUMAN_SETAIMODE_Defensive();
SetWhenever(InRange, 1);
rnd1=(_randomint(2)+1);
  if (rnd1==1)
  {
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Walk();
  }
  if (rnd1==2)
  {
HUMAN_SETMODE_Crouch();
  }
goto alrmdone;
//
label alrmdone:
gosub delay;
rnd1=(_randomint(30)+5);
HUMAN_MoveRandomRadius(rnd1);
goto alrmdone;
}
//----------------------Random Items----------------------
label RndItems:
rnd1=(_randomint(10)+1);
  if (rnd1==2){HUMAN_CreateItemInStore(54, 1);}
  if (rnd1==4){HUMAN_CreateItemInStore(61, 1);}
  if ((rnd1==6) and (_LoadGameValue(7)==1)) {HUMAN_CreateItemInStore(66, 1);}
  if (rnd1==8){HUMAN_CreateItemInStore(174, 1);}
return;
//----------------------OnDeath----------------------
OnDeath()
{
gosub RndItems;
printf ("EP17 - Enemy killed");
DisableWhenevers(1);
DisableSignals(1);
DisableAlarms(1);
EndScript();
}
//----------------------END----------------------
Label END:
