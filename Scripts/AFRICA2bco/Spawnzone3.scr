// Variables definition
Block
{
Frame af2_18;
	FRM_FindFrame(af2_18, "AF2_81");
Frame af2_19;
	FRM_FindFrame(af2_19, "AF2_82");
Frame af2_20;
	FRM_FindFrame(af2_20, "AF2_83");
Frame texty;
	FRM_FindFrame(texty, "AF2_texty");
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever enable(_PlayerInRange(30) AND (_ACTOR_GetState(af2_18)==0) AND (_ACTOR_GetState(af2_19)==0) AND (_ACTOR_GetState(af2_20)==0))
{
	MP_EnableSpawnZone("zone7", 1);
	MP_EnableSpawnZone("zone8", 2);
	MP_EnableSpawnZone("zone11", 2);
	MP_EnableSpawnZone("zone14", 2);
	SendSignal(texty, 7);
}
