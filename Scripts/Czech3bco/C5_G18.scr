OnDeath(){
  EndScript();
}

OnAlarm(){
  EndScript();
}

OnAlarmDone(){
  HUMAN_SetAlarm(false);
  goto END;
}

OnSignal(1)
{
HUMAN_Suspend(false);
HUMAN_BoardVehicle("Hakl2n",  true, 1);
goto END;
}

OnSignal(2)
{
HUMAN_BoardVehicle("Hakl2n",  false, 1);
HUMAN_SETSIGHTRANGE(100);
HUMAN_TurnAtNearestPlayer();
goto END; 
}

// -------------------------------------------------------------------------------------------------------------
  
HUMAN_Suspend(true);
HUMAN_SETSIGHTRANGE(10);
HUMAN_SETAIMODE_Aggressive();
