}
// -----------------------------

OnDeath(){
SendSignal(k1, 1);
SendSignal(k2, 1);
SendSignal(k3, 1);
SendSignal(r1, 1);
SendSignal(r2, 1);
SendSignal(r3, 1);
SendSignal(r4, 1);
printf("N2_G99 officer H17 dead");
EndScript();
}

OnAlarm(){
HUMAN_TurnAt(k2);
Delay(500);


SendSignal(k1, 1);
SendSignal(k2, 1);
SendSignal(k3, 1);
SendSignal(r1, 1);
SendSignal(r2, 1);
SendSignal(r3, 1);
SendSignal(r4, 1);
EndScript();
}

OnAlarmDone(){
HUMAN_SetAlarm(false);
goto END;
}

