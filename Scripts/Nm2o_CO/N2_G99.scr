  INTEGER rnd					= 0;

Frame k1;		FRM_FindFrame(k1,"G2_G01");
Frame k2;		FRM_FindFrame(k2,"G2_G02");
Frame k3;		FRM_FindFrame(k3,"G2_G03");

Frame r1;		FRM_FindFrame(r1,"Runne1");
Frame r2;		FRM_FindFrame(r2,"Runne2");
Frame r3;		FRM_FindFrame(r3,"Runne3");
Frame r4;		FRM_FindFrame(r4,"Runne4");

Frame me;		FRM_GetMyFrame(me);

SetAlarmType(1,1); //blizka strelba
