delay(2000);
HUMAN_TurnAt(gd39);
delay(20000);
goto alrmdone;
}
// ----------------------OnAlarm----------------------
OnAlarm()
{
//printf ("ER04 Alarm");
HUMAN_Stop();
Block
{
