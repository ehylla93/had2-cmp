// ----------------------Spawn----------------------
Whenever Spawn (_SignalReceived(1))
{
printf ("ER04 spawn");
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(95);
HUMAN_SETHEARRANGE(65);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Run();
HUMAN_MoveToFrame(rd18, 2);
HUMAN_MoveToFrame(rd19, 1);
HUMAN_SETMODE_Crouch();
HUMAN_TurnAt(target3);
