frame sound1;		frm_findframe(sound1,"S_sub3");
frame sound2;		frm_findframe(sound2,"S_sub4");
FRAME sound3;	 	FRM_FindFrame(sound3, "battle2");
FRAME sound4;	 	FRM_FindFrame(sound4, "battle3");
integer rnd;	
integer rnd_pause;

label loop:
  rnd= _randomint(4) +1;
  rnd_pause= _randomint(50000) +50000;
  if (rnd==1) {FRM_SetOn(sound1,true);}
  if (rnd==2) {FRM_SetOn(sound2,true);} 
  if (rnd==3) {FRM_SetOn(sound3,true);} 
  if (rnd==4) {FRM_SetOn(sound4,true);} 
  delay(rnd_pause);
goto loop; 
