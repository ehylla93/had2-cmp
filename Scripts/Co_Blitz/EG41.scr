//----------------------Spawn----------------------
Whenever Spawn (_SignalReceived(1))
{
Block
{
//printf ("EG41 spawn");
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(90);
HUMAN_SETHEARRANGE(60);
HUMAN_WeaponOnArm(0);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Guard();
goto checkpoint5;
}
//----------------------5----------------------
label checkpoint5:
HUMAN_MoveToFrame(gd5, 1);
rnd1= _randomint(5)+1;
  if ((rnd1==1) OR (rnd1==2))
  {
  goto checkpoint41;
  }
  if ((rnd1==3) OR (rnd1==4))
  {
  goto checkpoint42;
  }
  if (rnd1==5) 
  {
  goto checkpointh;
  } 
//----------------------4-1----------------------
label checkpoint41:
HUMAN_MoveToFrame(gd3, 1);
HUMAN_MoveToFrame(gd4, 1);
goto checkpoint4;
//----------------------4-2----------------------
label checkpoint42:
HUMAN_MoveToFrame(gd6, 1);
HUMAN_MoveToFrame(gd4, 1);
goto checkpoint4;
//----------------------4----------------------
label checkpoint4:
HUMAN_MoveToFrame(gd4, 1);
rnd2= _randomint(2)+1;
  if (rnd2==1)
  {
  goto checkpoint51;
  }
  if (rnd2==2)
  {
  goto checkpoint52;
  }
//----------------------5-1----------------------
label checkpoint51:
HUMAN_MoveToFrame(gd6, 1);
HUMAN_MoveToFrame(gd5, 1);
goto checkpoint5;
//----------------------5-2----------------------
label checkpoint52:
HUMAN_MoveToFrame(gd3, 1);
HUMAN_MoveToFrame(gd5, 1);
goto checkpoint5;
//----------------------h----------------------
label checkpointh:
HUMAN_MoveToFrame(gd0, 1);
HUMAN_MoveToFrame(hd0, 1);
HUMAN_SETMODE_Crouch();
rndpause=_randomint(45000)+20000;
delay(rndpause);
HUMAN_SETMODE_Stand();
goto checkpoint5;
}
// ----------------------OnAlarm----------------------
OnAlarm()
{
//printf ("EG41 Alarm");
HUMAN_Stop();
Block
{
AIEvent = _GetAlarmType();

If(AIEvent == 1)
{
//printf ("Alarm Type 1");
HUMAN_Stop();
HUMAN_WeaponOnArm(1);
HUMAN_SETMODE_Silence();
HUMAN_SETAIMODE_Defensive(); 
}
If(AIEvent == 2)
{
//printf ("Alarm Type 2");
HUMAN_Stop();
HUMAN_WeaponOnArm(1);
HUMAN_SETMODE_Crouch();
HUMAN_SETAIMODE_Aggressive();
}
