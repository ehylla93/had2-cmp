//ER00 Reinf. infantry mp40 pos0
// ----------------------Block----------------------
Block
{
frame me;			FRM_GetMyFrame(me);
frame rd0;			FRM_FindFrame(rd0,"erdummy00");
frame target2;		FRM_FindFrame(target2,"ertarget2");
SetAlarmType(1,1); //Shooting
SetAlarmType(2,1); //Enemy shots
SetAlarmType(4,0); //Hear steps (not working for clients)
SetAlarmType(8,0); //Action sound (not working for clients)
SetAlarmType(16,0); //Explosions (not working for clients)
SetAlarmType(32,1); //Sighted
SetAlarmType(64,1); //Injured
SetAlarmType(128,0); //From script
SetAlarmType(256,1); //Friendly shots
SetAlarmType(512,0); //Sights corpse (not working for clients)
integer AIEvent;
HUMAN_SetOptimized(1);
HUMAN_Suspend(1);
}
goto END;
// ----------------------Spawn----------------------
Whenever Spawn (_SignalReceived(1))
{
//printf ("ER00 spawn");
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(85);
HUMAN_SETHEARRANGE(75);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Run();
HUMAN_MoveToFrame(rd0, 1);
HUMAN_SETMODE_Crouch();
HUMAN_TurnAt(target2);
goto END;
}

// ----------------------OnAlarm----------------------
OnAlarm()
{
//printf ("ER00 Alarm");
HUMAN_Stop();
Block
{
AIEvent = _GetAlarmType();

If(AIEvent == 1)
{
//printf ("Alarm Type 1");
HUMAN_Stop();
HUMAN_WeaponOnArm(1);
HUMAN_SETMODE_Silence();
HUMAN_SETAIMODE_Defensive(); 
}
If(AIEvent == 2)
{
//printf ("Alarm Type 2");
HUMAN_Stop();
HUMAN_WeaponOnArm(1);
