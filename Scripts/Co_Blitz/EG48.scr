//----------------------Spawn----------------------
Whenever Spawn (_SignalReceived(1))
{
Block
{
printf ("EG48 wtf where am I ?");
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(90);
HUMAN_SETHEARRANGE(75);
HUMAN_WeaponOnArm(0);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Stand();
HUMAN_Stop();
HUMAN_TurnAt(weh1);
goto checkpoint1;
}
label checkpoint1:
HUMAN_Stop();
HUMAN_MoveToFrame(weh2, 1);
HUMAN_MoveRandomRadius(4);
HUMAN_TurnAt(weh1);
rnd1= _randomint(15)+1;
  if (rnd1==5)
  {
  printf ("cp2");
  goto checkpoint2;
  }
  else
  {
  printf ("Timer");
  goto timer;
  }
label timer:
HUMAN_TurnAt(weh1);
HUMAN_SetAnim("%%nuda", 1000, 1000, 1);
rndpause= _randomint(15000)+15000;
delay(rndpause);
goto checkpoint1;
//
label checkpoint2:
HUMAN_SetAnim("", 1000, 1000, 1);
HUMAN_SETMODE_Walk();
HUMAN_MoveToFrame(hd1, 1);
rndpause= _randomint(10000)+15000;
delay(rndpause);
printf ("Ready or not, here I come !");
