// ----------------------Block----------------------
Block
{
frame me;		FRM_GetMyFrame(me);
frame hd1;		FRM_FindFrame(hd1,"hdummy01");
frame rd13;		FRM_FindFrame(rd13,"erdummy13");
Frame weh1;		FRM_FindFrame(weh1,"panther3");
Frame weh2;		FRM_FindFrame(weh2,"kubel3");
SetAlarmType(1,1);
