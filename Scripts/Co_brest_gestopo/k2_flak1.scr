//k2_flak1.scr
// -------------------------------------------------------------------------------------------------------------
Block
{
SetAlarmType(1023, 1);
Frame me;	FRM_GetMyFrame(me);
}
HUMAN_SETSIGHTRANGE(300);
HUMAN_SETHEARRANGE(300);
HUMAN_BoardVehicle("la_flak1", 1, 0);
HUMAN_Suspend(0);
// -------------------------------------------------------------------------------------------------------------
OnAlarm()
{
Printf("Alarmed");
HUMAN_SETSIGHTRANGE(300);
HUMAN_SETHEARRANGE(300);
HUMAN_BoardVehicle("la_flak2", 1, 0);
EndScript();
}
// -------------------------------------------------------------------------------------------------------------
OnAlarmDone()
{
Printf("Alarm done");
SetAlarmType(1023,0);
SetAlarmType(1015,1);
HUMAN_SETSIGHTRANGE(300);
HUMAN_SETHEARRANGE(300);
HUMAN_BoardVehicle("la_flak2", 1, 0);
}
// -------------------------------------------------------------------------------------------------------------
OnDeath()
{
FRM_MorphSpeech(me,  56990055, 2, 80);
Delay(200);
FRM_CreateParticle(124, me);
EndScript();
}