// Particles on Objects
// -----------------------------------------------------------------

Block
{
Frame jeep;				FRM_FindFrame(jeep, "06_jeepsas_br");
Frame Object03;			FRM_FindFrame(Object03, "06_Jeepsas_br.Object03");

Car_SetFuel(jeep, 0);
FRM_CreateParticle(73, Object03);
}

Whenever Destroyed (_Actor_GetState(jeep) == 0)
{
MakeExplosion(jeep, 250000, 9000);
FRM_CreateParticle(68, jeep);
}