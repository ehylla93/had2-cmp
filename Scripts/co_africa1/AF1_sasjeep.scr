// AF1_opelflak - Explosion of cars
// -------------------------------------------------------------------------------------------------------------

block {
  FRAME me;      		FRM_GetMyFrame(me);
}

// -------------------------------------------------------------------------------------------------------------

Whenever allplinrange (_MP_AllTeamMembersAreInRange(1, 10))
{
  Delay(1500);
  integer obj5active = _LoadGameValue(18);
  if(obj5active==1){
	SetWhenever(allplinrange, false);
    SetObjectiveStatus(9, 4);
    SetObjectiveStatus(8, 1);
	EndScript();
    }
  else
  {
    SetWhenever(allplinrange, true);
	goto END;
  }
}

Whenever umrel (_ACTOR_GetState(me) == 0) {
  SetWhenever(allplinrange, false);
  EndScript();
}

