}

Whenever Spawn (_PlayerInRange(130))
{
HUMAN_Suspend(0);
//HUMAN_SETMODE_Lie();
printf("Blue_3 spawn");
goto END;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
}


