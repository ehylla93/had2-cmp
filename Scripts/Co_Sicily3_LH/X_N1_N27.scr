// Enemy MG42 NW corner
// ----------------------------------------

Block
{
  integer  AIEvent;
  Frame turn; 		FRM_FindFrame(turn, "N01_look01"); 
  SetAlarmType(1023, False);	
}
HUMAN_Suspend(True);	
goto TheEnd;

Whenever XXX ( _PlayerInRange(100) )
{
  HUMAN_Suspend(False);
  printf("N27 MG spawn");
}

Block
  {
     HUMAN_WeaponOnArm(False);
     HUMAN_SETAIMODE_Zombie();
     HUMAN_SETMODE_Crouch();
     HUMAN_SetOptimized(2);
     HUMAN_SETMODE_Walk();
     SetAlarmType(1023, True);		
   }
 HUMAN_BoardVehicle("kulasek", true, 0);
  
Goto TheEnd;

label DeAlarm:
  Block
    {
       HUMAN_WeaponOnArm(True);
       HUMAN_SETAIMODE_Zombie();
       HUMAN_SETMODE_Crouch();
       HUMAN_SetOptimized(2);
       HUMAN_SETMODE_Run();
    }
  //HUMAN_Move("Add17_end");	
  HUMAN_TurnAt(turn);	
  Delay(100);
  HUMAN_BoardVehicle("kulasek", true, 0);
goto TheEnd;				

OnAlarm()
{
  Block
    {
      AIEvent =_GetAlarmType(); 
      PrintfNumber("N27 MG alarm: ", AIEvent);	
      HUMAN_Stop();
      HUMAN_SETMODE_Run();
    }
  EndScript(); 
}

OnAlarmDone()
{
  SetAlarmType(1023, True);	
  HUMAN_SetAlarm(False);
  goto DeAlarm;
}

Label TheEND:



