// 05_E01_speech - Speech Dummy for 05_E01

Frame E01;	FRM_FindFrame(E01, "05_E01");
goto end;

// ----------------------------------------

OnSignal(1)
{
goto Speak1;
}

OnSignal(2)	// received from 05_E01 on death or on alarm
{
	FRM_MorphSpeechDelayed(E01, 0, 0, 0);
	EndScript();
}

Label Speak1:
FRM_MorphSpeechDelayed(E01, 07021400, 5, 30);		// "whistling"
Delay(20000);
goto Speak1;

// ----------------------------------------	
	
Label end: