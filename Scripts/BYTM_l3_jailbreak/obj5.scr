// Obj 5 - Use the radio
// ----------------------------------

Frame radio;	FRM_FindFrame(radio, "02_radio_01");

OnSignal(1)
{
SUBTITLES_SetOn(1);
SUBTITLES_SetText(27001012);	// "NEW OBJECTIVE: USE THE RADIO AT THE OUTPOST TO CALL FOR PICKUP"
Delay(3500);
SUBTITLES_SetOn(0);
SendSignal(radio, 1);
EndScript();
}