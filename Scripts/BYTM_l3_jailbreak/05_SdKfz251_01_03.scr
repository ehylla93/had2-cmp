// 05_SdKfz251_01_03 - 05_SdKfz251 - Passenger
// ----------------------------------------

Frame SdKfZ;	FRM_FindFrame(SdKfZ, "05_SdKfz251");
Frame MyFRM;	FRM_GetMyFrame(MyFRM);
FRM_SwitchFaceTexture(MyFRM, "e_f053");
HUMAN_Suspend(1);
HUMAN_SETAIMODE_Defensive();
goto end;

// ----------------------------------------

OnDeath(){
printf("05_SdKfz251_01_03 dead");
EndScript();
}

OnAlarm(){
HUMAN_BoardVehicle("05_SdKfz251",  false, 2);
EndScript();
}

OnAlarmDone(){
SetAlarmType(1023, true);
SetAlarmType(768, true);
HUMAN_SetAlarm(0);
goto end;
}

OnSignal(1)
{
HUMAN_Suspend(0);
HUMAN_BoardVehicle("05_SdKfz251",  true, 2);
goto end;
}

OnSignal(2)
{
HUMAN_BoardVehicle("05_SdKfz251",  false, 2);
}

Label Move:
HUMAN_SetOptimized(1);
HUMAN_SETMODE_Stand();

if(_LoadGameValue(1)==1) { HUMAN_SETMODE_Run(); HUMAN_Move("R1_03"); }
else {
HUMAN_SETMODE_Walk();
HUMAN_MoveFromFrame(SdKfZ, 5);
}

Whenever AlarmsOff (_LoadGameValue(99)==1)
{
DisableAlarms(1);
}

// ----------------------------------------

Label end: