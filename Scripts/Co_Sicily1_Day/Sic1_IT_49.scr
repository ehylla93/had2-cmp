Block
{
  integer  AIEvent;
  Frame turn; 		FRM_FindFrame(turn, "dummy_it_49_see"); 
  SetAlarmType(1023, False);	
}
HUMAN_Suspend(True);	
goto TheEnd;				

Whenever XXX ( _PlayerInRange(75) )
{
  HUMAN_Suspend(False);
}

Block
  {
     HUMAN_WeaponOnArm(False);
     HUMAN_SETAIMODE_Zombie();
     HUMAN_SETMODE_Stand();
     HUMAN_SetOptimized(2);
     HUMAN_SETMODE_Walk();
     SetAlarmType(1023, True);		
  }
  HUMAN_SetAnim("%%hledam1", 400, 400, True);
Goto TheEnd;

label DeAlarm:
  Block
    {
       HUMAN_WeaponOnArm(True);
       HUMAN_SETAIMODE_Zombie();
       HUMAN_SETMODE_Stand();
       HUMAN_SetOptimized(2);
       HUMAN_SETMODE_Run();
    }
  HUMAN_Move("it_49_end");	
  HUMAN_SETMODE_Crouch();
  HUMAN_TurnAt(turn);	
  goto theEnd;	

OnSignal(2)			
{
  HUMAN_Suspend(False);
  SetAlarmType(1023, True);	
  SetWhenever(XXX, false);
  Delay(1000);
  HUMAN_SETMODE_Run();
  HUMAN_SetAnim("", 100, 100, False);
  HUMAN_Move("it_49_1");	
  HUMAN_Move("it_49_end");	
  HUMAN_SETMODE_Crouch();
  HUMAN_TurnAt(turn);	
}

OnAlarm()
{
  HUMAN_SetAnim("", 100, 100, False);
  DisableSignals(true);
  Block
    {
      AIEvent =_GetAlarmType(); 
      PrintfNumber(" --- 49 --- ma alarm: ", AIEvent);	
      HUMAN_Stop();
      HUMAN_SETMODE_Run();
    }
  EndScript();
}

OnAlarmDone()
{
  SetAlarmType(1023, True);	
  HUMAN_SetAlarm(False);
  goto DeAlarm;
}

Label TheEND:
