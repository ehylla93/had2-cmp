Frame m_nadrz4;	FRM_FindFrame(m_nadrz4,"m_nadrz4");
Integer IntP04;		IntP04=1;
Frame m_nadrz5;	FRM_FindFrame(m_nadrz5,"m_nadrz5");
Integer IntP05;		IntP05=1;


Integer Actor_Eliminated;	Actor_Eliminated = 0;

SetObjectiveStatus(2, 0);
}

// -------------------------------------

Delay(500);
goto Ftankkill;

Label Ftankkill:

Block
{

If(IntP01 == 1)
{

If(_Actor_GetState(m_nadrz)==0)
{	
Actor_Eliminated=Actor_Eliminated+1;		
