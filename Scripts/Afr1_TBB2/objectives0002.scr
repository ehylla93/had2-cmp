// Obj 2 - Destroy all enemy Fuel Tanks
// -------------------------------------

Block
{
Frame m_nadrz;	FRM_FindFrame(m_nadrz,"m_nadrz");
Integer IntP01;		IntP01=1;
Frame m_nadrz2;	FRM_FindFrame(m_nadrz2,"m_nadrz2");
Integer IntP02;		IntP02=1;
Frame m_nadrz3;	FRM_FindFrame(m_nadrz3,"m_nadrz3");
