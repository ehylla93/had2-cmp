}	
}

If(IntP02 == 1)
{

If(_Actor_GetState(m_nadrz2)==0)
{	
Actor_Eliminated=Actor_Eliminated+1;		
IntP02=0;	
}	
}

If(IntP03 == 1)
{

If(_Actor_GetState(m_nadrz3)==0)
{	
Actor_Eliminated=Actor_Eliminated+1;		
IntP03=0;	
}	
}

If(IntP04 == 1)
{

If(_Actor_GetState(m_nadrz4)==0)
{	
Actor_Eliminated=Actor_Eliminated+1;		
IntP04=0;	
}	
}

If(IntP05 == 1)
{

If(_Actor_GetState(m_nadrz5)==0)
{	
Actor_Eliminated=Actor_Eliminated+1;		
IntP05=0;	
}	
}


}

If(Actor_Eliminated == 5)
{
SUBTITLES_SetOn(1);
SUBTITLES_SetText(05011015);
SetObjectiveStatus(2, 1);
Delay(4000);
SUBTITLES_SetOn(0);
EndScript();
}

Delay(2500);
goto Ftankkill;
