// Starting pose
Block
{
HUMAN_SETAIMODE_Aggressive();
HUMAN_SETMODE_Run();
HUMAN_SetOptimized(true);
}
HUMAN_Suspend(true);
GoTo end;

Label DeAlarm:
	HUMAN_Move("AF1_40_01");
	HUMAN_TurnAt(look01);
	HUMAN_SETMODE_Crouch();

Label end: