// Obj 3 - Destroy the Radio Station
// -------------------------------------

Block
{
	Frame Obj8;			FRM_FindFrame(Obj8, "obj8"); 

	SetObjectiveStatus(3, 0);
}


Whenever Radio_Destroyed (_SignalReceived(1))
{
	Delay(1000);
	SUBTITLES_SetOn(1);
	SUBTITLES_SetText(52999711);
	SendSignal(Obj8, 1);
	Delay(3500);
	SetObjectiveStatus(3, 1);
	SUBTITLES_SetOn(0);
	EndScript();
}
