OnAlarm()
{
block
{
DisableSignals(1);
AIEvent =_GetAlarmType(); 
}
HUMAN_SetAnim("",200,200,0);
HUMAN_WeaponOnArm(1);

if (((aievent==2) or (aievent==16)) or (aievent==256))
{
SetAlarmType(274,0);
if (b==0)
{
HUMAN_SetAlarm(0);
HUMAN_SETMODE_Run();
HUMAN_Move("Dog_0104");
b=1;
}
