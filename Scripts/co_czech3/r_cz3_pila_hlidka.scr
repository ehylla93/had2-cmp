  HUMAN_Move("Dog_0103");
goto HP_rand;


label HP4:
  HUMAN_Move("HP2_6");
goto HP_rand;

label HP_rand:
	Delay(200);
	HUMAN_WeaponOnArm(0);
	HUMAN_SetAnim("%%turnleft",200,200,0);
	Delay(2800);
	HUMAN_SetAnim("%%turnright",200,200,0);
	Delay(3700);
	HUMAN_SetAnim("",200,200,0);
	Delay(200);
	HUMAN_WeaponOnArm(1);
  integer pom;
  pom=_RandomInt(4);
  if (pom==0) {goto HP1;}
  if (pom==1) {goto HP2;}  
  if (pom==2) {goto HP3;}  
  if (pom==3) {goto HP4;}

goto HP_rand;

