OnAlarmDone()
{
HUMAN_SetAlarm(0);
goto HP_rand;
}

OnDeath()
{
SendSignal(reinfo, 0);
DisableSignals(1);
EndScript();
}

label HP1:

  HUMAN_Move("Dog_0106");
