// Soldier in sawmill - searching crates

block
{
SetAlarmType(1,1);			//Close shooting
SetAlarmType(2,1);			//enemy shots
SetAlarmType(4,1);			//hear steps (dosn't work for clients)
SetAlarmType(8,0);			//action sounds
SetAlarmType(16,1);			//explosions
SetAlarmType(32,1);			//sighted
SetAlarmType(64,1);			//is injured
SetAlarmType(128,1);		//from script
SetAlarmType(256,1);		//friendly shots
SetAlarmType(512,0);		//sights corpse

HUMAN_SETSIGHTRANGE(60);
HUMAN_SETHEARRANGE(60);

integer a;
integer b;	b=0;
integer aievent;

HUMAN_SETAIMODE_Aggressive();

frame reinfo;	FRM_FindFrame(reinfo, "dummy_reinforcement");
frame velitel;	FRM_FindFrame (velitel,"velitel");
frame me;		FRM_GetMyFrame(me);
frame b1;		FRM_FindFrame(b1,"m_b1_bedL_");
frame b2;		FRM_FindFrame(b2,"m_b1_bedL_2");
frame b3;		FRM_FindFrame(b3,"m_b1_bedL_3");
frame b4;		FRM_FindFrame(b4,"la_bedz_");

FRM_SwitchFaceTexture(me, "e_f021");
}

HUMAN_Suspend(1);
goto end;

//----------------------------------------------------------------------------------------------

OnAlarm()
{
block
{
aievent=(_GetAlarmType());
}
HUMAN_SetAnim("",0,0,0);
HUMAN_WeaponOnArm(1);

if (((aievent==2) or (aievent==16)) or (aievent==256))
{
SetAlarmType(274,0);
if (b==0)
	{
	HUMAN_SETMODE_Run();
	HUMAN_SetAlarm(0);
	HUMAN_TurnAtNearestPlayer();
	delay(300);
	SetAlarmType(274,1);
	HUMAN_Move("hledac6");
	HUMAN_SETMODE_Crouch();	
	b=1;
	goto end;
	}
	else {
	HUMAN_TurnAtNearestPlayer();
	HUMAN_SetAlarm(0);
	delay (900);
	SetAlarmType(274,1);
	goto end;
	}
}
else {
EndScript();
}
}

OnAlarmDone()
{
goto end;
}

OnDeath()
{
DisableSignals(1);
SendSignal (reinfo,0);
EndScript();
}

Whenever(_PlayerInRange(70))
{
HUMAN_Suspend(0);
goto funguj;
}

Whenever velitel(_SignalReceived(1))
{
HUMAN_SetAnim("",0, 0,0);
HUMAN_Move("hledac5");
HUMAN_TurnAt(velitel);
SendSignal (velitel,10);	//prisel sem
goto end;
}

Whenever vel2(_SignalReceived(2))
{
Printf("I can't find it. There's tons of useless stuff in the crates but no coils.");
HUMAN_SetAnim("%%rozhovor2",500,500,1);
FRM_MorphSpeechDelayed(me, 20994047, 5, 30);
HUMAN_SetAnim("", 500, 500, 0);
SendSignal (velitel,11);		//mluf
goto end;
}

Whenever vel3(_SignalReceived(3))
{
Printf("The documents listed the parts and Hans said he put them into these crates.");
HUMAN_SetAnim("%%rozhovor3",500,500,1);
FRM_MorphSpeechDelayed(me, 20994049, 5, 30);
HUMAN_SetAnim("", 500, 500, 0);
SendSignal (velitel,12);		//mluf
goto end;
}

Whenever vel4(_SignalReceived(4))
{
goto funguj;
}

//----------------------------------------------------------------------------------------------

