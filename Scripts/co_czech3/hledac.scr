	{
	HUMAN_Move("hledac1");
	HUMAN_TurnAt(b1);
	HUMAN_SetAnim("%%hledam",1000, 1000,1);
	delay (40000);
	HUMAN_SetAnim("",1000, 1000,0);
	delay (1000);
	goto funguj;
	}

if (a==1)
	{
	HUMAN_Move("hledac2");
	HUMAN_TurnAt(b2);
	HUMAN_SetAnim("%%hledam",1000, 1000,1);
	delay (30000);
	HUMAN_SetAnim("",1000, 1000,0);
	delay (1000);
	goto funguj;
	}

if (a==2)
	{
	HUMAN_Move("hledac3");
	HUMAN_TurnAt(b3);
	HUMAN_SetAnim("%%hledam",1000, 1000,1);
	delay (40000);
	HUMAN_SetAnim("",1000, 1000,0);
	delay (1000);
	goto funguj;
	}

if (a==3)
