// Obj 2 - Locate the radio station
// -------------------------------------

Block
{
Frame Obj5;		FRM_FindFrame(Obj5,"obj5");

SetObjectiveStatus(2, 0);
}

Whenever Player (_PlayerInRange(3))
{
SUBTITLES_SetOn(1);
SUBTITLES_SetText(04990811);
SendSignal(Obj5, 1);
Delay(3500);
SetObjectiveStatus(2, 1);
SUBTITLES_SetOn(0);
}