
frame Radio_sound_1;	 FRM_FindFrame(Radio_sound_1, "l_haydn_");
frame Radio_sound_2;	 FRM_FindFrame(Radio_sound_2, "l_haydn_2");
integer a = 1;

OnUse()
{
  If (a == 1)
    {
        FRM_SetOn(Radio_sound_1, false);
        FRM_SetOn(Radio_sound_2, false);
        a = 0; 
      }else{
        FRM_SetOn(Radio_sound_1, True);
        FRM_SetOn(Radio_sound_2, True);
        a = 1;
    }
}

OnSignal(1)
{
Endscript();
}