Delay(1500);
HUMAN_SetAnim("", 1000, 1000, 0);
Delay(350);
HUMAN_ACTIVITY_Hot();
Delay(200);
HUMAN_ACTIVITY_Drinkbottle(bottle);
FRM_MorphSpeechDelayed(me, 07991564, 2, 10);
HUMAN_SetAnim("%%rozcilujese", 1000, 1000, 1);
Delay(200);
FRM_MorphSpeechDelayed(me, 07991565, 2, 10);
