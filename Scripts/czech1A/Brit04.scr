// Brit 4 - posadka Jeepu
// -------------------------------------------------------------------------------------------------------------

block
{
  INTEGER Atype				= 0;
  INTEGER rnd					= 0;

Frame obj4;		FRM_FindFrame(obj4,"obj4");
Frame me;		FRM_GetMyFrame(me);

SetAlarmType(1023, 0);
}
// -------------------------------------------------------------------------------------------------------------

OnDeath(){
FRM_MorphSpeechDelayed(me, 0, 0, 0);
SendSignal(obj4, 2);
goto END;
}

OnSignal(1)
{
HUMAN_Suspend(0);
HUMAN_BoardVehicle("Jeep",  true, 3);
goto END;
}

OnSignal(3)
{
HUMAN_BoardVehicle("Jeep",  false, 1);
Delay(500);
DisableSignals(true);
HUMAN_Suspend(1);
goto end;
}

// -------------------------------------------------------------------------------------------------------------

HUMAN_Suspend(1);
Block
{
FRM_SwitchFaceTexture(me, "e_f015");
}
goto END;


