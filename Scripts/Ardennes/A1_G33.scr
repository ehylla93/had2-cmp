OnDeath(){
EndScript();
}

OnAlarm(){
HUMAN_SetAnim("", 500, 1000, 1);
HUMAN_SETMODE_Crouch();
HUMAN_SETAIMODE_Aggressive();
HUMAN_SetSniper(1, 5);
EndScript();
}

OnAlarmDone(){
HUMAN_SetAlarm(false);
HUMAN_SETMODE_Lie();
goto END;
}

Whenever Player (_PlayerInRange(70))
{
