// AF2_53 - driver Tank1

// Variables definition
Block
{
Frame af57;
	FRM_FindFrame(af57, "AF2_57");
Frame me;
	FRM_GetMyFrame(me);
Integer invehicle;
	invehicle=0;
}
// ---------------------------------------------
// Alarm and AI event settings
// vsetky typy alarmov nastavene na true
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
// ------------------------
// Whenever keywords and signals
OnAlarm()
{
	If(invehicle==1)
	{
	HUMAN_Drive("", 0);
	//HUMAN_BoardVehicle("Tank1", false, 0); //
	}
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

OnSignal(1)	// received from AF2_53_A1
{
	HUMAN_Suspend(false);
	GoTo move;
}


OnDeath()
{
	EndScript();
}
