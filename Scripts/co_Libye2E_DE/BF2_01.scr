HUMAN_BoardVehicle("MG42_4", true, 0);
HUMAN_SETAIMODE_Zombie();
FRM_SwitchFaceTexture(me, "e_f053");
HUMAN_SETSIGHTRANGE(300);
HUMAN_SETHEARRANGE(100);
HUMAN_Suspend(true);

