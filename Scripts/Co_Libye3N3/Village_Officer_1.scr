Block
{
     Integer  alarm_sight_range = 180;         //  Na jakou vzdalenost vidi pri alarmu
     Integer unsuspend_range = 20;
     Integer is_enabled = 1;
     // -------------------------------------------------------------------------------------------------------------
     // Alarm and AI event settings
     // 1   - blizka strelba    2   - strelba     4     - kroky                    8     - zvuky (OnUse)    16   - exploze
     // 32 - vidim                 64 - zraneni    128 - smrtelny vykrik    256 - friendly fire         512 - vidim mrtvolu
     // -------------------------------------------------------------------------------------------------------------
   SetAlarmType(1023, false);
   DisableWhenevers(1);
}

// ----------------------------------------------------------------------------------------------------
// AKTIVACE ALARMU
// ----------------------------------------------------------------------------------------------------
OnAlarm()
{
      Block { DisableSignals(1);  DisableWhenevers(1); }
      HUMAN_SETSIGHTRANGE( alarm_sight_range );
      EndScript();
}

// ----------------------------------------------------------------------------------------------------
// KONEC ALARMU
// ----------------------------------------------------------------------------------------------------
OnAlarmDone()
{
   block {
      SetAlarmType(1023, false);
      SetAlarmType(1, true);
      SetAlarmType(32, true);
      SetAlarmType(64, true);
   }
   Block { DisableSignals(0);  DisableWhenevers(0); }
   GoTo End;
}

// ----------------------------------------------------------------------------------------------------
// KONEC ALARMU
// ----------------------------------------------------------------------------------------------------
OnDeath()
{
	// posleme signaly
	Frame Frm;
	FRM_FindFrame(Frm, "VILLAGE_GUARD_11");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_12");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_13");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_14");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_15");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_16");
	SendSignal(Frm, 1);
	Delay(1000);
	FRM_FindFrame(Frm, "VILLAGE_GUARD_17");
	SendSignal(Frm, 1);
      EndScript();
}


// ----------------------------------------------------------------------------------------------------
// UNSUSPENDOVANI
// ----------------------------------------------------------------------------------------------------
Whenever "player_in_range" (_PlayerInRange(unsuspend_range) )
{
   block {
      SetAlarmType(1023, false);
      SetAlarmType(1, true);
      SetAlarmType(32, true);
      SetAlarmType(64, true);
   }
   HUMAN_Suspend( false );
   HUMAN_LookAround(4);
   GoTo End;	
} 

  // ----------------------------------------------------------------------------------------------------
   // INIT
   // ----------------------------------------------------------------------------------------------------
   HUMAN_Suspend(true);  
   Delay(300);  // Pro jistotu, at se stihnou nastavit GameValue   
   Block
   {
      alarm_sight_range = _LoadGameValue( 2 );
      is_enabled = _LoadGameValue(3);
      if (is_enabled==0) {
         printf("Officer_1 ready!");
         DisableWhenevers(0);
         SetWhenever("player_in_range", 1);
         SetWheneverTime("player_in_range", 3000);
         HUMAN_SETAIMODE_Zombie();
      }
   }
   GoTo  End;

