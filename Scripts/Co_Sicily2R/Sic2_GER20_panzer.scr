Block
{
  HUMAN_SetOptimized(2);
  SetAlarmType(1023, False); 
}
HUMAN_Suspend(True);	
goto TheEnd;

// posila aktivator druhe vlny
Onsignal(1)		
{
  HUMAN_Suspend(False);
  HUMAN_BoardVehicle("Panzer_2", true, 1);		
  SetAlarmType(1023, True); 
} 

OnAlarm()  
  {
    Printf("machinguner Panzeru2 presel do AI ... GER20");      
    EndScript();
  }
OnAlarmDone()  
{
  HUMAN_SetAlarm(False);
  SetAlarmType(1023, True); 
} 

label TheEnd:

