Block
{
  integer  AIEvent;
  Frame turn; 		FRM_FindFrame(turn, "dummy_it5_see");
  Frame spojuje; 	FRM_FindFrame(spojuje, "dummy_It5_spojuje");
  frame odpalovac;	FRM_FindFrame(odpalovac, "It_7");
  frame MyFRM;	FRM_GetMyFrame(MyFRM);

  SetAlarmType(1023, False);	
