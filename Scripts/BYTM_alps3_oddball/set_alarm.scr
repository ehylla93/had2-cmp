// Turning on/off global alarm
// -------------------------------------------------------

SaveGameValue(16, 0);
Delay(3000);	//waiting for default load of other scripts

//To disable alarms, edit the following line to SaveGameValue(16, 1);
SaveGameValue(16, 0);

if(_LoadGameValue(16)==1)
{
printf("____ALARMS OFF____");
}
else
{
printf("____ALARMS ON____");
}
EndScript();