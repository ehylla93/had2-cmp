Label Move:
FRM_TeleportNearCheckpoint(MyFRM, "r4_2_01", "");
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Run();
HUMAN_Move("r4_2_02");
HUMAN_Move("r4_2_03");

// ------------------------------------

Whenever AlarmsOff (_LoadGameValue(16)==1)
{
DisableAlarms(1);
}

Label END: