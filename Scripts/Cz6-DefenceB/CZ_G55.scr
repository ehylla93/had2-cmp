Frame s1;		FRM_FindFrame(s1,"CZ_G01");
Frame s2;		FRM_FindFrame(s2,"CZ_G02");
Frame s3;		FRM_FindFrame(s3,"CZ_G03");
Frame s4;		FRM_FindFrame(s4,"CZ_G04");
Frame s5;		FRM_FindFrame(s5,"CZ_G05");
Frame s6;		FRM_FindFrame(s6,"CZ_G06");
Frame s7;		FRM_FindFrame(s7,"CZ_G07");
