//--------------------------------------------------------------------------------------------------------------

OnDeath(){

SendSignal(obj1, 3);

If(pechota==0)
{
SendSignal(s1, 1);
SendSignal(s2, 1);
SendSignal(s3, 1);
SendSignal(s4, 1);
Delay(6000);
SendSignal(s5, 1);
SendSignal(s6, 1);
SendSignal(s7, 1);
SendSignal(s8, 1);
Delay(6000);
SendSignal(s9, 1);
SendSignal(s10, 1);
SendSignal(s11, 1);
SendSignal(s12, 1);
Delay(6000);
SendSignal(s13, 1);
SendSignal(s14, 1);
SendSignal(s15, 1);
SendSignal(s16, 1);
Delay(6000);
SendSignal(s17, 1);
SendSignal(s18, 1);
}

EndScript();
}

OnAlarm(){
EndScript();
}

OnAlarmDone(){
goto END;
}

Whenever Tiger_Destroyed (_Actor_GetState(t1)==0)
{
SendSignal(s1, 1);
SendSignal(s2, 1);
SendSignal(s3, 1);
SendSignal(s4, 1);
Delay(6000);
SendSignal(s5, 1);
SendSignal(s6, 1);
SendSignal(s7, 1);
SendSignal(s8, 1);
Delay(6000);
SendSignal(s9, 1);
SendSignal(s10, 1);
SendSignal(s11, 1);
SendSignal(s12, 1);
Delay(60000);
SendSignal(s13, 1);
SendSignal(s14, 1);
SendSignal(s15, 1);
SendSignal(s16, 1);
Delay(6000);
SendSignal(s17, 1);
SendSignal(s18, 1);
HUMAN_Suspend(0);
HUMAN_SetOptimized(2);
HUMAN_BoardVehicle("La_tiger_3" , true, 0);
SendSignal(p1, 1);
SendSignal(p2, 1);
Delay(1000);
HUMAN_Drive("C5_kubel_tele", 30);
HUMAN_Drive("", 30);

pechota=pechota+1;

goto END;
}
// -------------------------------------------------------------------------------------------------------------

HUMAN_SETHEARRANGE(10);
HUMAN_Suspend(1);
goto END;

