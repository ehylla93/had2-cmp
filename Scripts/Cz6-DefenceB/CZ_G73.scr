Frame obj1;		FRM_FindFrame(obj1,"obj1");

Frame s1;		FRM_FindFrame(s1,"CZ_G82");
Frame s2;		FRM_FindFrame(s2,"CZ_G83");
Frame s3;		FRM_FindFrame(s3,"CZ_G84");
