//----------------------Spawn----------------------
Whenever Spawn (_PlayerInRange(95))
{
Block
{
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(75);
HUMAN_SETHEARRANGE(55);
HUMAN_SetOptimized(2);
HUMAN_BoardVehicle("PAK40_1", 1, 0);
