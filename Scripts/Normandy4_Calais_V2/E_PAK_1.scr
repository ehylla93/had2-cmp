}
goto END;
}
//----------------------OnAlarm----------------------
OnAlarm()
{
HUMAN_BoardVehicle("PAK40_1", 1, 0);
EndScript();
}
//----------------------OnAlarmDone----------------------
OnAlarmDone()
{
HUMAN_BoardVehicle("PAK40_1", 1, 0);
}
//----------------------OnDeath----------------------
OnDeath()
{
DisableWhenevers(1);
DisableSignals(1);
DisableAlarms(1);
EndScript();
}
