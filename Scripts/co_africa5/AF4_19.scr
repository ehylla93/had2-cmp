// AF4_19 - soldier, reading materials from archive
// -------------------------------------------------------------------------------------------------------------

block{
  FRAME archive;			FRM_FindFrame(archive, "m_AF5_slozky01b14");
  FRAME book;				FRM_FindFrame(book, "m_AF5_slozky01a7");
  INTEGER Atype			= 0;

  SetAlarmType(1023, true);  
}

// -------------------------------------------------------------------------------------------------------------

OnDeath(){
  EndScript();
}

OnSignal(1){
  goto ACTIVATE;
}

OnAlarm(){
  HUMAN_DropObject();
  block{
    HUMAN_Suspend(false);
    HUMAN_SetOptimized(0);
    Atype = _GetAlarmType();
  }
  EndScript();
}

OnAlarmDone(){
  SetAlarmType(512, false);
  HUMAN_SetAlarm(false);
  HUMAN_SetOptimized(1);
  goto ACTIVATE;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
goto END;
}

// -------------------------------------------------------------------------------------------------------------

  HUMAN_SETAIMODE_Defensive();
  HUMAN_SetOptimized(0);
  HUMAN_Suspend(true);
goto END;

Label ACTIVATE:
  HUMAN_Suspend(0);
  HUMAN_SetOptimized(1);
  HUMAN_SETMODE_Walk();
  HUMAN_SETMODE_Stand();
  HUMAN_SETAIMODE_Zombie();
  HUMAN_SETMODE_Crouch();

Label ACTIVITY:
  HUMAN_Investigate(archive);
  //HUMAN_PickObject(book, 1);
  Delay(1000);
  HUMAN_SETMODE_Stand();
  // HUMAN_ACTIVITY_Read(1, book);			// doplnit az bude fungovat read
  Delay(2000);
  // HUMAN_ACTIVITY_Read(0, book);
  HUMAN_SETMODE_Crouch();
  //HUMAN_DropObject();
goto ACTIVITY;

Label END: