  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_11");
  HUMAN_Move("AF4_05_10");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_14");
  HUMAN_Move("AF4_05_04");
