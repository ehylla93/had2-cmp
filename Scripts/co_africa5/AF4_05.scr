  HUMAN_Move("AF4_05_12");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_16");
  HUMAN_Move("AF4_05_08");
goto ACTIVITY;

Label LOOKAROUND:
  HUMAN_WeaponOnArm(0);
  Delay(500);
  rnd = _RandomInt(4);
  if(rnd == 1){
    rnd = _RandomInt(1500) + 1500;
    HUMAN_SetAnim("%%turnleft", 500, 500, false);  Delay(rnd);
  }
  if(rnd == 2){
    rnd = _RandomInt(1500) + 1500;
    HUMAN_SetAnim("%%turnright", 500, 500, false);  Delay(rnd);
  }
HUMAN_WeaponOnArm(1);
Delay(500);
return;

Label END: