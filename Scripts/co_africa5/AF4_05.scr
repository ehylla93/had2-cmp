// AF4_05 - guard walking and guarding the three hangars
// -------------------------------------------------------------------------------------------------------------

block{
  INTEGER rnd		= 0;
  INTEGER Atype		= 0;
    
  SetAlarmType(1023, true);
}

// -------------------------------------------------------------------------------------------------------------

OnDeath(){
  EndScript();
}

Whenever player(_PlayerInRange(100)){
  goto ACTIVATE;
}

OnAlarm(){
  HUMAN_SetAnim("", 100, 100, false);
  block{
    SetWhenever(player, false);
    Atype = _GetAlarmType();
  }
EndScript();
}

OnAlarmDone(){
  SetAlarmType(1023, true);
  SetAlarmType(512, false);
  HUMAN_SetAlarm(false);
  goto ACTIVATE;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
}

// -------------------------------------------------------------------------------------------------------------

Label ACTIVATE:
  HUMAN_SetOptimized(1);
  HUMAN_SETMODE_Guard();
  HUMAN_SETMODE_Stand();
  HUMAN_SETAIMODE_Defensive();

Label ACTIVITY:
  HUMAN_Move("AF4_05_01");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_02");
  HUMAN_Move("AF4_05_03");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_04");
  HUMAN_Move("AF4_05_05");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_06");
  HUMAN_Move("AF4_05_07");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_08");

  HUMAN_Move("AF4_05_01");
  gosub LOOKAROUND;
  HUMAN_Move("AF4_05_02");
