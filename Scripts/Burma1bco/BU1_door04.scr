// BU1_door04
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame bu1_04;
	FRM_FindFrame(bu1_04, "BU1_04");
Frame me;
	FRM_GetMyFrame(me);
Frame sound;
	FRM_FindFrame(sound, "S_dorcon_01");
Integer state;
	state=0;	// 2 - opening, 3 - closing

FRM_SetOn(sound, false);
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnUse()
{
	SendSignal(bu1_04, 1);
	state=_ACTOR_GetState(me);

	If(state==2)
	{
		FRM_SetOn(sound, true);
	}
	If(state==3)
	{
		FRM_SetOn(sound, false);
	}
}
// -------------------------------------------------------------------------------------------------------------