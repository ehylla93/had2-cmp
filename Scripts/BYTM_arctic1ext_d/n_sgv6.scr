// sgv6, alarm mg nest (north of street), received from E13, mg_E01-E04

SaveGameValue(6, 0);	//no alarm (default)
Frame T4;		FRM_Findframe(T4, "n_T04");

OnSignal(1)
{
EnableSignal(1, false);
SaveGameValue(6, 1);	//alarm
printf("sgv6 = 1, mg nest alarm");
Delay(2000);	//to avoid conflict between signal 1 & 3 (T4)
SendSignal(T4, 3);
EndScript();
}