// A4_R141


Block
{
  integer  AIEvent;
  	     Frame hakl3;		FRM_FindFrame(hakl3,"hakl3");
         Frame kubel;		FRM_FindFrame(kubel,"THOR2");        
         Frame turn; 		FRM_FindFrame(turn, "AMMO_5"); 
		 		 
  SetAlarmType(1023, True);	
}
HUMAN_Suspend(True);	
goto TheEnd;				

Whenever XXX ( _PlayerInRange(65) )
{
  HUMAN_Suspend(False);
     HUMAN_SETSIGHTRANGE(300);
   HUMAN_SETHEARRANGE(300);
  GoTo activity;
}

Block
  {
     HUMAN_SETSIGHTRANGE(300);
   HUMAN_SETHEARRANGE(300);
     HUMAN_WeaponOnArm(False);
     HUMAN_SETAIMODE_Defensive();
     HUMAN_SETMODE_Crouch();
     HUMAN_SetOptimized(2);
     HUMAN_SETMODE_Walk();
     SetAlarmType(1023, True);		
   }
  
Goto TheEnd;

label DeAlarm:
  Block
    {
	   HUMAN_SETSIGHTRANGE(300);
   HUMAN_SETHEARRANGE(300);
       HUMAN_WeaponOnArm(True);
       HUMAN_SETAIMODE_Defensive();
       HUMAN_SETMODE_Crouch();
       HUMAN_SetOptimized(2);
       HUMAN_SETMODE_Walk();
    }
  HUMAN_TurnAt(turn);	
  Delay(100);
goto TheEnd;	

OnDeath()
{
  printf("A4_R141 dead");
  EndScript();
}
			

OnAlarm()
{
  HUMAN_SetAnim("", 100, 100, False); 
  Block
    {
      AIEvent =_GetAlarmType(); 
      PrintfNumber(" A4_R141 alarm: ", AIEvent);	
      HUMAN_Stop();
      HUMAN_SETMODE_Walk();
    }
  If ( ((AIEvent == 32) or (AIEvent ==4)) or ( _PlayerInRange(1500)) )
    {  
       EndScript(); 
     } else {
       HUMAN_SetAlarm(False);       
       goto TheEnd;
    }
}

OnAlarmDone()
{
  SetAlarmType(1023, True);	
     HUMAN_SETSIGHTRANGE(300);
   HUMAN_SETHEARRANGE(300);
  HUMAN_SetAlarm(False);
  GoTo activity;
}

Label activity:
HUMAN_MoveToFrame(hakl3, 2);
Delay(12000);
HUMAN_MoveToFrame(kubel, 14);
Delay(8000);
HUMAN_TurnAt(turn);
Delay(4000);
GoTo activity;

Label END:


Label TheEND:
