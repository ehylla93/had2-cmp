// AF1_cut10_detector - detector on door
// -------------------------------------------------------------------------------------------------------------

INTEGER cnt 				= 0;

// -------------------------------------------------------------------------------------------------------------

OnUse(){
  if((_PlayerInRange(3)) AND (cnt == 0)){
    cnt = 1;
    CSC_RunCutscene(10);   
  }
}

OnCutSceneDone(10){
    EndScript();
}

