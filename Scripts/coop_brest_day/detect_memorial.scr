block
{
	Frame detectmemorial;		FRM_FindFrame (detectmemorial,"detect_memorial");
	frame soundmemorial;        		FRM_FindFrame(soundmemorial,"sound_memorial");
}

Whenever inRange(_PlayerInBox(detectmemorial))
{	
	FRM_SetOn (soundmemorial,true);	
	
}

Whenever notInRange(!_PlayerInBox(detectmemorial))
{	
	FRM_SetOn (soundmemorial,false);	
}
