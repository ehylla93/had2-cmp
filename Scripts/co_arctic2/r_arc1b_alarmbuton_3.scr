Block
{
  Frame Global;	FRM_FindFrame(Global , "dummy_globalAlarm");
  Frame hide;		FRM_FindFrame(hide , "m_alarm_3.Cylinder01");
  integer hidden = 0;
}
FRM_SetOn(hide, True);

goto END;

OnUse()
{
   SendSignal(Global, 2);
   If ( hidden == 0 ) 
      {
          hidden = 1;
          FRM_SetOn(hide, False);
         } else {
          hidden = 0;
          FRM_SetOn(hide, True);
      }
}

Label END: