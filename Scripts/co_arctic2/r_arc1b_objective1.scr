// Photograph plans

block {
frame FRM;		FRM_FindFrame(FRM, "photo_count");
frame PLANY;	FRM_FindFrame(PLANY, "g_A1_pl01");
}

Whenever OBJ (_ACTOR_GetState(PLANY) == 1)
  {
    SendSignal(FRM, 1);
    SUBTITLES_SetOn(True);
    SUBTITLES_SetText(02990401); 
    Delay(3000);
    SUBTITLES_SetOn(False);
  }



