// AF2_07 - vojak v kolone
// Vytvoril:  Dzodzo
// Zodpovida: Dzodzo
// Zmeny:
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Integer aievent;
	aievent=0;
Frame me;
	FRM_GetMyFrame(me);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
// vsetky typy alarmov nastavene na true
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnAlarm()
{
		aievent=_GetAlarmType();
	Block
	{
	DisableSignals(true);
	DisableWhenevers(true);
	printfnumber("AF2_07: alarmed na ", aievent);
	}
	EndScript();
}

OnAlarmDone()
{
	Block
	{
	HUMAN_SetAlarm(false);
	DisableSignals(false);
	DisableWhenevers(false);
	HUMAN_SetOptimized(2);
	}
	GoTo end;
}

OnSignal(1)	// received from AF2_01_A1
{
	HUMAN_Suspend(false);
	GoTo move;
}

OnSignal(2)	// received from AF2_B01 ---start fight---
{
	HUMAN_Stop();
	HUMAN_SETMODE_Run();
	HUMAN_Move("AF2_07_01");
	HUMAN_SETMODE_Crouch();
	GoTo end;
}

OnDeath()
{
	EndScript();
}
// -------------------------------------------------------------------------------------------------------------
// Starting pose
FRM_SwitchFaceTexture(me, "e_f045");
HUMAN_SETAIMODE_Zombie();
HUMAN_Suspend(true);
GoTo end;

Label move:
	HUMAN_Move("AF2_01_01");
	HUMAN_Move("AF2_01_02");
	HUMAN_Move("AF2_01_03");
	GoTo end;

Label end: