// Enemy running to window
// ---------------------------

Block
{

Frame tank;	FRM_FindFrame(tank,"la_shermanAf_3");

SetAlarmType(1023,0); //all off

}

// ---------------------------

OnDeath(){
printf("P2_G03 dead");
EndScript();
}

OnAlarm(){
HUMAN_SETMODE_Crouch();
EndScript();
}

OnAlarmDone(){
HUMAN_SETMODE_Crouch();
HUMAN_SetAlarm(0);
goto END;
}

Whenever Spawn (_SignalReceived(1))
{
Delay(65000);
HUMAN_Suspend(0);
printf("P2_G03 attacks Sherman");
HUMAN_SetOptimized(1);
//HUMAN_SETMODE_Crouch();
HUMAN_SETMODE_Run();

HUMAN_Move("Ally3_2");

label loopT:
  If ( _ACTOR_GetState(tank) == 1 ) 
    {
       HUMAN_TurnAt(tank);
       Delay(2500);
       HUMAN_Attack(tank, 4000); 
       Goto loopT;
    }

SetAlarmType(1023,1);
HUMAN_SETAIMODE_Defensive();
goto END;
}


// ---------------------------

HUMAN_SETSIGHTRANGE(98);
HUMAN_SETHEARRANGE(98);

HUMAN_SetOptimized(1);
HUMAN_Suspend(1);
goto END;


Label END:
