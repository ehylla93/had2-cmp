// barking dog

block {
frame sound;		frm_findframe(sound,"S_haf");
integer rnd_pause;
}

label loop:
rnd_pause= _randomint(25500) + 6000;
delay(rnd_pause);
FRM_SetOn(sound, true);
goto loop;

Whenever in(_PlayerInRange(25))
{
SetWhenever(out,1);
goto end;
}

Whenever out(!_PlayerInRange(25))
{
SetWhenever(in,1);
goto loop;
}

Whenever ticho(_SignalReceived(1))
{
block
{
SetWhenever(out,0);
SetWhenever(in,0);
}
}
label end: