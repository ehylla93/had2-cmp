Block
{
Frame Cp1;		FRM_FindFrame(Cp1,"Kubel_01");
Frame Cp2;		FRM_FindFrame(Cp2,"Bmw_01");
Frame Cp3;		FRM_FindFrame(Cp3,"Opel_01");
Frame Cum_Brana;	FRM_FindFrame(Cum_Brana,"Bomb_01");

SetAlarmType(1,1); //blizka strelba
SetAlarmType(2,1); //slysim strelbu
SetAlarmType(4,1); //kroky
SetAlarmType(8,1); //zvuky by use
SetAlarmType(16,1); //exploze
SetAlarmType(32,1); //vidi
SetAlarmType(64,1); //jsem zranen
SetAlarmType(128,1); //zeskriptu
SetAlarmType(256,1); //pratelska strelba
SetAlarmType(512,1); //vidim flakotu

integer AIEvent;
	AIEvent =_RandomInt(3);

Frame me;	FRM_GetMyFrame(me);
FRM_SwitchFaceTexture(me, "e_f064");
}
// -------------------------------------------------------------------------------------------------------------

OnDeath(){
EndScript();
}

OnAlarm(){
HUMAN_WeaponOnArm(1);
HUMAN_SETMODE_Run();

If(AIEvent==0) 
{
HUMAN_SETAIMODE_Zombie();
HUMAN_MoveToFrame(Cp3, 7);
HUMAN_SETMODE_Lie();
HUMAN_SetSniper(1, 5);
HUMAN_WeaponUp(1);
HUMAN_TurnAt(Cum_Brana);
EndScript();
}

If(AIEvent==1)
{
HUMAN_SETAIMODE_Defensive();
HUMAN_MoveToFrame(Cp2, 3);
HUMAN_SETMODE_Crouch();
HUMAN_SetSniper(1, 5);
HUMAN_WeaponUp(1);
HUMAN_TurnAt(Cum_Brana);
EndScript();
}

HUMAN_SETAIMODE_Defensive();
HUMAN_MoveToFrame(Cp1, 5);
HUMAN_SETMODE_Crouch();
HUMAN_SetSniper(1, 5);
HUMAN_WeaponUp(1);
HUMAN_TurnAt(Cum_Brana);
EndScript();
}

OnAlarmDone(){
HUMAN_SetAlarm(0);

If(AIEvent==0) {HUMAN_SetSniper(1, 5);HUMAN_WeaponUp(1);HUMAN_TurnAt(Cum_Brana);}
If(AIEvent==1){HUMAN_SetSniper(1, 5);HUMAN_WeaponUp(1);HUMAN_TurnAt(Cum_Brana);}
If(AIEvent==2){HUMAN_SetSniper(1, 5);HUMAN_WeaponUp(1);HUMAN_TurnAt(Cum_Brana);}
goto END;
}

Whenever Spawn (_SignalReceived(1))
{
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(250);
HUMAN_SETHEARRANGE(200);
HUMAN_SetOptimized(1);
goto END;
}

// -------------------------------------------------------------------------------------------------------------

HUMAN_Suspend(1);
goto END;

