// Tiger_02
// -------------------------------------------------------------------------------------------------------------

block {
SetAlarmType(1023, true);

HUMAN_SETSIGHTRANGE(400);
HUMAN_SETHEARRANGE(400);
}

HUMAN_SETAIMODE_Aggressive();
HUMAN_Suspend(true);
HUMAN_SETEVENTS(true);

goto END;

// -------------------------------------------------------------------------------------------------------------

OnSignal(1){
  goto ACTIVATE;
}

OnDeath(){
  EndScript();
}

OnAlarm(){
  EndScript();
}

OnAlarmDone(){
  HUMAN_SetAlarm(false);
  goto END;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
goto END;
}

// -------------------------------------------------------------------------------------------------------------

Label ACTIVATE:
  HUMAN_Suspend(false);
  HUMAN_BoardVehicle("Tiger01", 1, 2);
goto END;

Label END: