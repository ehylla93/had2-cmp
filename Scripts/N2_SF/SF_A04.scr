// ---------------------------------------------

OnDeath(){
EndScript();
}


Whenever Spawn (_SignalReceived(1))
{
DisableAlarms(1);
HUMAN_SETSIGHTRANGE(60);
HUMAN_SETHEARRANGE(0);
HUMAN_SETMODE_Crouch();
HUMAN_SetOptimized(1);
HUMAN_Suspend(0);
Delay(12000);
goto Palba;
}

Whenever Tank_Coming_In (_SignalReceived(2))
{
HUMAN_SETMODE_Crouch();
HUMAN_SETMODE_Run();
HUMAN_Move("Ally1_1");
goto END;
}

Whenever Reinforcements_Arrived (_SignalReceived(3))
{
HUMAN_SETMODE_Stand();
HUMAN_MoveToFrame(Kamos, 1);
HUMAN_SETMODE_Stand();
HUMAN_TurnAt(Cum);
HUMAN_WeaponUp(1);
goto END;
}

Whenever Suspend (_SignalReceived(9))
{
HUMAN_Stop();
HUMAN_Suspend(1);
goto END;
}


