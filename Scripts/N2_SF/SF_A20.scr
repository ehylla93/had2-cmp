HUMAN_TurnAt(T3);
Delay(200);
HUMAN_Attack(T3, 3000);
VyberCil=_RandomInt(5);
}

If(VyberCil==3)
{
If(_Actor_GetState(T4)==0){VyberCil=VyberCil+1;Goto Palba;}

HUMAN_TurnAt(T4);
Delay(200);
HUMAN_Attack(T4, 3000);
VyberCil=_RandomInt(5);
}

If(VyberCil==4)
{
If(_Actor_GetState(T5)==0){VyberCil=_RandomInt(4);Goto Palba;}

HUMAN_TurnAt(T5);
Delay(200);
HUMAN_Attack(T5, 3000);
VyberCil=_RandomInt(5);
}

goto Palba;


