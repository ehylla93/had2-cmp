//----------------------Spawn----------------------
Whenever Spawn (_PlayerInRange(300))
{
Block
{
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(50);
HUMAN_SETHEARRANGE(60);
HUMAN_SETAIMODE_Aggressive();
HUMAN_SetOptimized(2);
HUMAN_BoardVehicle("Opelflak2", 1, 2);
}
HUMAN_TurnAt(turn1);
goto END;
}

OnAlarm()
{
HUMAN_BoardVehicle("Opelflak2", 1, 2);
EndScript();
}

OnAlarmDone()
{
HUMAN_BoardVehicle("Opelflak2", 1, 2);
}

OnDeath()
{
EndScript();
}
