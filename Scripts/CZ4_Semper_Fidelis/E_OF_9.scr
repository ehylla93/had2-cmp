//Walking Officer
//----------------------Block----------------------
Block
{
Frame Tank1;	FRM_FindFrame(Tank1, "panther1");
Frame Tank2;	FRM_FindFrame(Tank2, "panther2");
Frame Tank3;	FRM_FindFrame(Tank3, "panther3");
Frame Tank4;	FRM_FindFrame(Tank4, "panther4");
Frame Tank5;	FRM_FindFrame(Tank5, "panther5");
Frame Tank6;	FRM_FindFrame(Tank6, "panther6");
Frame Tank7;	FRM_FindFrame(Tank7, "panther7");
Frame Box1;		FRM_FindFrame(Box1, "ExplBox1");
Frame Box2;		FRM_FindFrame(Box2, "ExplBox3");
Frame Box3;		FRM_FindFrame(Box3, "ExplBox6");
Frame Box4;		FRM_FindFrame(Box4, "ExplBox8");
Frame Box5;		FRM_FindFrame(Box5, "ExplBox9");
Frame me;		FRM_GetMyFrame(me);
SetAlarmType(1,1);
SetAlarmType(2,1);
SetAlarmType(4,0);
SetAlarmType(8,0);
SetAlarmType(16,0);
SetAlarmType(32,1);
SetAlarmType(64,1);
SetAlarmType(128,0);
SetAlarmType(256,1);
SetAlarmType(512,0);
HUMAN_SetOptimized(1);
HUMAN_Suspend(1);
integer Rnd1;
}
goto END;

//----------------------Spawn----------------------
Whenever Spawn (_PlayerInRange(400))
{
Rnd1=(_randomint(7)); //3
  if (Rnd1==1)
  {
DisableWhenevers(1);
DisableSignals(1);
DisableAlarms(1);
HUMAN_Kill(me);
goto END;
  }
  else
  { 
Block
{
HUMAN_Suspend(0);
HUMAN_SETSIGHTRANGE(75);
HUMAN_SETHEARRANGE(50);
HUMAN_WeaponOnArm(0);
HUMAN_SETAIMODE_Zombie();
}
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Walk();
Goto Anim;
}
}

//----------------------Animations----------------------
label Anim:
HUMAN_SetAnim("", 1000, 1000, 1);
//gosub delay;
Rnd1=(_randomint(12));
  if (Rnd1==0)
  {
HUMAN_MoveToFrame(Tank1, 5);
HUMAN_MoveRandomRadius(10);
  }
