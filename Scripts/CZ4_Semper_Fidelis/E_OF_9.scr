  if (Rnd1==11)
  {
HUMAN_MoveToFrame(Box5, 4);  
HUMAN_SetAnim("%%teplous", 1000, 1000, 1);
  }
gosub delay;
Goto Anim;
//----------------------Delay
label delay:
Rnd1=(_randomint(20000)+10000);
delay(Rnd1);
HUMAN_SetAnim("", 1000, 1000, 1);
return;


//----------------------OnAlarm----------------------
OnAlarm()
{
HUMAN_SetAnim("", 1000, 1000, 1);
HUMAN_WeaponOnArm(1);
Rnd1=(_randomint(4)); //5
If (Rnd1 == 1)
{
HUMAN_SETMODE_Stand();
HUMAN_SETAIMODE_Aggressive();
}
If (Rnd1 == 2)
{
HUMAN_SETMODE_Crouch();
HUMAN_SETAIMODE_Defensive();
}
EndScript();
}


//----------------------OnAlarmDone----------------------
OnAlarmDone()
{
HUMAN_SETMODE_Stand();
HUMAN_SETMODE_Walk();
HUMAN_SETAIMODE_Zombie();
Goto Anim;
}

//----------------------OnDeath----------------------
OnDeath()
{
Rnd1=(_randomint(5)); //12
  if (Rnd1==2){HUMAN_CreateItemInStore(54, 1);}		//First-Aid kit
DisableWhenevers(1);
DisableSignals(1);
DisableAlarms(1);
EndScript();
}

//----------------------END----------------------
