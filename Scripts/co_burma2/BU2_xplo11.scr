// BU2_xplo11 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame me;
	FRM_GetMyFrame(me);
Frame xplo11;
	FRM_FindFrame(xplo11, "x_vybuch_11");
Integer rnd;
	rnd=0;
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

Whenever alarm(_SignalReceived(1))	// received from BU2_xploset02
{
	rnd=_RandomInt(2000);
	Delay(rnd);
	SetActorState(xplo11, 1);
	Delay(700);
	FRM_SetOn(xplo11, false);
}