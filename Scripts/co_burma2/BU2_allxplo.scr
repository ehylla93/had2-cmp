// BU2_allxplo - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition

block {
Frame me;	FRM_GetMyFrame(me);
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

OnSignal(1)	// received from BU2_Allied10 on death
{
	PlaySound(6, 8);
	Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, me);
		MakeExplosion(me, 1500000, 20000);
	}
}