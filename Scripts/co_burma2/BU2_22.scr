// BU2_22 - guard in the bunkers
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame shoot01;	FRM_FindFrame(shoot01, "BU2_22_shoot01");
Frame me;		FRM_GetMyFrame(me);

SetAlarmType(28, false);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings

OnAlarm()
{
	Block
	{
	DisableSignals(true);
	DisableWhenevers(true);
	}
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	Block
	{
	DisableSignals(false);
	DisableWhenevers(false);
	SetAlarmType(924, false);
	}
	GoTo end;
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

Whenever player(_SignalReceived(1))		// received from BU2_22_A1
{
	HUMAN_Suspend(false);
	HUMAN_SETMODE_Crouch();
	GoTo end;
}

Whenever shoot(_SignalReceived(2))		// received from BU2_22_A2
{
	HUMAN_SETMODE_Stand();
	SetAlarmType(35, true);
	HUMAN_SETMODE_Crouch();
	GoTo end;
}

OnDeath()
{
	EndScript();
}
// -------------------------------------------------------------------------------------------------------------

Block
{
HUMAN_SETAIMODE_Defensive();
HUMAN_SetSniper(true, 2);
FRM_SwitchFaceTexture(me, "e_f047");
}

HUMAN_Suspend(true);

Label end: