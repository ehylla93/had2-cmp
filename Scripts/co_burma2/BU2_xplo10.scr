// BU2_xplo10 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame me;
	FRM_GetMyFrame(me);
Frame xplo10;
	FRM_FindFrame(xplo10, "x_vybuch_10");
Integer rnd;
	rnd=0;
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

Whenever alarm(_SignalReceived(1))	// received from BU2_xploset02
{
	rnd=_RandomInt(2000);
	Delay(rnd);
	SetActorState(xplo10, 1);
	Delay(700);
	FRM_SetOn(xplo10, false);
}