// BU2_xplo08 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame me;
	FRM_GetMyFrame(me);
Frame xplo08;
	FRM_FindFrame(xplo08, "x_vybuch_08");
Integer rnd;
	rnd=0;
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever alarm(_SignalReceived(1))	// received from BU2_xploset01
{
	rnd=_RandomInt(2000);
	Delay(rnd);
	SetActorState(xplo08, 1);
	Delay(700);
	FRM_SetOn(xplo08, false);
}
// -------------------------------------------------------------------------------------------------------------