// BU2_Allied08 - allied soldier - runs through middle, shoots and dies
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame shoot01;	FRM_FindFrame(shoot01, "BU2_A06_shoot01");
Frame me;		FRM_GetMyFrame(me);

HUMAN_SETEVENTS(false);
SetAlarmType(1023, false);

FRM_SwitchFaceTexture(me, "e_f056");
}

HUMAN_SETMODE_Run();

goto end;

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
// -------------------------------------------------------------------------------------------------------------

OnSignal(1)
{
goto beh;
}

Label beh:
	Delay(6001);
	HUMAN_SetOptimized(1);
	HUMAN_Move("BU2_A08_01");
	HUMAN_TurnAt(shoot01);
	HUMAN_Attack(shoot01, 3000);
	Delay(1000);
	HUMAN_Attack(shoot01, 2000);
	If(_PlayerInRange(15))
	{
		HUMAN_Kill(me);
		GoTo end;
	}
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(49, me);
		MakeExplosion(me, 1200000, 5000);
	}

Label end: