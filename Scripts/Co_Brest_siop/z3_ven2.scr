label chodim:

a=1;
HUMAN_SETMODE_Walk();
HUMAN_Move("z3_ven2_01");
a=2;

label 2:

HUMAN_TurnAt(cum1);


LAbel kourim:

HUMAN_SetAnim("%%nuda1", 300, 300, 0);
delay (9000);


goto kourim; 






