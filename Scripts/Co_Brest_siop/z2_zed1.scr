label chodim:

a=1;
HUMAN_Move("z2zed1_01");
a=2;
HUMAN_SetAnim("%%kouka", 300, 300, 1);
delay (5000);
HUMAN_SetAnim("", 300, 300, 0);

label 2:
HUMAN_Move("z2zed1_02");
a=1;

HUMAN_SetAnim("%%kouka", 300, 300, 1);
delay (7000);
HUMAN_SetAnim("", 300, 300, 0);


goto chodim;


//---------------------------------------------------------------------------------------------------------


label rozdel:
if (a==1)	{ goto chodim; }
if (a==2)	{ goto 2; }
