HUMAN_SETHEARRANGE(150);

integer a;		a=1;
integer alarmpos;	alarmpos=0;
integer aievent;
integer endx;		endx=0;
integer suspend;

integer k;
integer d;

frame cum1;		FRM_FindFrame(cum1, "z2zed1cum1");
frame cum2;		FRM_FindFrame(cum2, "z2ven4cum2");
frame puf;		FRM_FindFrame(puf, "venek1puf");

frame me;		FRM_GetMyFrame(me);
