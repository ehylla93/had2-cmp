// North-East next to SdKfZ

Frame count;	FRM_FindFrame(count, "dead_counter");

HUMAN_Suspend(true);
SetAlarmType(1023, true);
Whenever PIR (_PlayerInRange(20))
	{
	HUMAN_Suspend(false);
	}

OnAlarm()
	{
	HUMAN_Suspend(false);
	HUMAN_SETMODE_Stand();
	HUMAN_SETMODE_Run();
	HUMAN_SETAIMODE_Aggressive();
	EndScript();
	}

OnAlarmDone()
	{
	HUMAN_Move("GE_129j");
	}

OnDeath()
{
SendSignal(count, 1);
EndScript();
}	

Whenever AlarmsOff (_SignalReceived(20))
{
DisableAlarms(1);
}
