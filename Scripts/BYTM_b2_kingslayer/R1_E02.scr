OnDeath(){
printf("R1_E02 dead");
EndScript();
}

OnAlarm()
{
EndScript();
}

OnAlarmDone(){
HUMAN_SetAlarm(0);
goto END;
}

OnSignal(1)
{
FRM_TeleportNearCheckpoint(this, "R1_02", "R1_02a");

Integer Int = _RandomInt(100);
printfnumber("Int R1_E02:", Int);

	If(Int > 50)
	{
	HUMAN_SETAIMODE_Aggressive();
	}
	If(Int < 25)
	{
	HUMAN_SETAIMODE_Defensive();
	}
	Else
	{
	HUMAN_SETAIMODE_Zombie();
	}

HUMAN_Suspend(0);
HUMAN_SETMODE_Run();
HUMAN_Move("R1_02a");
HUMAN_Move("R1_02b");
}

Whenever AlarmsOff (_LoadGameValue(99)==1)
{
DisableAlarms(1);
}

