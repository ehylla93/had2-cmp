Block
{
SetAlarmType(1023, 0);

Frame this;		FRM_GetMyFrame(this);
FRM_SwitchFaceTexture(this,"e_f056");
}

SetWhenever(PlayerNear, 0);
HUMAN_Suspend(1);
goto END;

