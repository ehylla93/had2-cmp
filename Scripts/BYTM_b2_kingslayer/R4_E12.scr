Block
{
SetAlarmType(640,0);

Frame this;		FRM_GetMyFrame(this);
Frame Bags;		FRM_FindFrame(Bags, "C4_volume_B01");

FRM_SwitchFaceTexture(this, "e_f049");
}

HUMAN_SetOptimized(1);
HUMAN_Suspend(1);
goto END;

