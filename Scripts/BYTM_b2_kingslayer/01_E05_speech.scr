// 01_E05_speech - Speech Dummy for 01_E05

Frame E05;	FRM_FindFrame(E05, "01_E05");

goto END;

// ----------------------------------------

Whenever Spawn (_MP_IsTeamMemberInRange(1, 60))
{
GoTo Speak;
}

OnSignal(1)	// received from 01_E05 on death or on alarm
{
	FRM_MorphSpeech(E05, 0, 0, 0);
	EndScript();
}

Label Speak:
FRM_MorphSpeech(E05, 07021400, 5, 30);		//"whistling"
Delay(30000);
GoTo Speak;

// ----------------------------------------	
	
Label END: