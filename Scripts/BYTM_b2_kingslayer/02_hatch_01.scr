// 02_hatch_01 Bunker 02 Hatch 01

Block
{

Frame E04;		FRM_FindFrame(E04, "02_E04");
Frame this;		FRM_GetMyFrame(this);

Integer state = 0;	// 2 - opening, 3 - closing
}

OnUse()
{
	state = _ACTOR_GetState(this);

	If(state==2)
	{
		SendSignal(E04, 1);
		EndScript();
	}
	If(state==3)
	{
		EndScript();
	}
}