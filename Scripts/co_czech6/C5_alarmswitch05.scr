// C5_alarmswitch05 - alarm switch
// -------------------------------------------------------------------------------------------------------------
// Variables definition

Block {
Integer alarm;	alarm=0;
Frame distro;	FRM_FindFrame(distro, "C5_alarmdistro");
Frame button;	FRM_FindFrame(button, "m_alar_5.Cylinder01");
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

OnUse()
{
	If(alarm==0)
	{
		SendSignal(distro, 1);
		alarm=1;
		GoTo end;
	}

	If(alarm==1)
	{
		SendSignal(distro, 2);
		alarm=0;
		GoTo end;
	}
}

OnSignal(1)
{
alarm=1;
}

OnSignal(2)
{
alarm=0;
}

// -------------------------------------------------------------------------------------------------------------
Label end: