// C5_G43 - guard watching radio operator
// -------------------------------------------------------------------------------------------------------------
// Variables definition

Block
{
Frame me;			FRM_GetMyFrame(me);
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

OnAlarm()
{
	HUMAN_SetAnim("", 200, 200, false);
	HUMAN_SETMODE_Run();
	HUMAN_Move("C5_G43_01");
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

Whenever player(_PlayerInRange(50))
{
	HUMAN_Suspend(false);
	HUMAN_SetAnim("%%cumvoda", 200, 200, true);
	GoTo end;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
}

// -------------------------------------------------------------------------------------------------------------

Block
{
FRM_SwitchFaceTexture(me, "e_f056");
HUMAN_SetOptimized(2);
HUMAN_SETAIMODE_Defensive();
}
HUMAN_Suspend(true);
GoTo end;

Label end: