// C5_G32 - soldier in the bunker
// -------------------------------------------------------------------------------------------------------------
// Variables definition

Block
{
Frame g33;	FRM_FindFrame(g33, "C5_G33");
Frame me;	FRM_GetMyFrame(me);
}

// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals

OnAlarm()
{
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

Whenever signal(_SignalReceived(1))	// received C5_G31_activator01
{
	HUMAN_Suspend(false);
	GoTo end;
}

OnDeath()
{
	SendSignal(g33, 2);
	GoTo end;
}

Whenever AlarmsOff (_SignalReceived(19))
{
DisableAlarms(1);
}

// -------------------------------------------------------------------------------------------------------------

Block
{
FRM_SwitchFaceTexture(me, "e_f053");
HUMAN_SetOptimized(2);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Run();
HUMAN_SetSniper(true, 2);
}
HUMAN_Suspend(true);

Label end: