goto END;
}

Whenever Spawn (_SignalReceived(2))
{
Delay(1500);
HUMAN_Suspend(0);
HUMAN_SETMODE_Crouch();
HUMAN_SETMODE_Run();
HUMAN_MoveToFrame(MG4, 15);
Delay(900);
HUMAN_BoardVehicle("MG4",  1, 0);	//test
HUMAN_Attack(Plan1, 2750);
HUMAN_Attack(Plan2, 2750);
HUMAN_Attack(Plan3, 2800);
HUMAN_BoardVehicle("MG4",  0, 0);	//test
HUMAN_Attack(Plan1, 7000);
Delay(1200);

SetAlarmType(1023,1);
HUMAN_SETAIMODE_Aggressive();
goto END;
}


