// Enemy near MG4
// ---------------------------

Block
{
Frame MG4;	FRM_FindFrame(MG4,"MG4");
Frame Plan1;	FRM_FindFrame(Plan1,"m_mapa_1");
Frame Plan2;	FRM_FindFrame(Plan2,"m_mapa_2");
Frame Plan3;	FRM_FindFrame(Plan3,"m_mapa_3");

SetAlarmType(1023,0); //all off

}

// ---------------------------

OnDeath(){
printf("P2_G04 dead");
EndScript();
}

OnAlarm(){
HUMAN_SETMODE_Crouch();
EndScript();
}

OnAlarmDone(){
HUMAN_SETMODE_Crouch();
